{
  "name": "@ldraney/github-mcp",
  "version": "0.2.0-beta.3",
  "description": "GitHub MCP server with OAuth and 800+ API endpoints",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "github-mcp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
