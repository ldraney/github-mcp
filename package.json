{
  "name": "github-mcp",
  "version": "0.1.0",
  "description": "GitHub MCP server with OAuth Device Flow and 800+ endpoint coverage",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "github-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "github",
    "mcp",
    "model-context-protocol",
    "octokit",
    "oauth",
    "webhooks",
    "cli"
  ],
  "author": "ldraney",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldraney/github-mcp.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@octokit/auth-oauth-device": "^7.0.0",
    "@octokit/rest": "^21.0.0",
    "@octokit/webhooks-types": "^7.0.0",
    "commander": "^12.0.0",
    "keytar": "^7.9.0",
    "smee-client": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0"
  }
}
